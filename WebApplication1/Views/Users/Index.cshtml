@model IEnumerable<WebApplication1.Models.UserModel>
@using WebApplication1.Models;
@{
    ViewBag.Title = "Личный кабинет – ASP.NET";
}

<style>
    .addbutton{
        text-decoration:none;
        font-size:24px;
        margin-right:30px; 
        margin-bottom:10px;
        background-color:rgba(232, 82, 5, 1)!important;
        padding: 15px;
        text-transform:uppercase;
        font-family: 'Raleway', sans-serif;
        font-weight:bold;
    }

    .flexbox{
        display:flex;
        justify-content:center;
        align-content:center;
        align-items:start;
    }
</style>

<div class="flexbox" style="margin-top:20px;">
    @Ajax.ActionLink("Изменить данные", "CreateOrEdit", new { id = ViewBag.UserIndex.Id }, new AjaxOptions { UpdateTargetId = "results" }, new { @class = "addbutton" })
    @Ajax.ActionLink("Удалить аккаунт", "Delete", new { id = ViewBag.UserIndex.Id }, new AjaxOptions { UpdateTargetId = "results" }, new { @class = "addbutton" })
</div>